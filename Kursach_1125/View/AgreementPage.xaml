<Page x:Class="Kursach_1125.View.AgreementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach_1125.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgreementPage">
    <Page.Resources>
        <Style x:Key="Button" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0 10 0 10"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="30 10 30 10">
            <TextBlock Text="Арендодатели" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Arial Black" FontSize="16"/>
            <ListView Height="300" Margin="0 20 0 0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10 30 10 30">
            <Button Content="Добавить" Style="{DynamicResource Button}"/>
            <Button Content="Редактировать" Style="{DynamicResource Button}"/>
            <Button Content="Удалить" Style="{DynamicResource Button}"/>
        </StackPanel>

    </Grid>
</Page>
