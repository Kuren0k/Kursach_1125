<Page x:Class="Kursach_1125.View.ExpensesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach_1125.View"
      xmlns:mvvm="clr-namespace:Kursach_1125.VM"
      mc:Ignorable="d" 
      DataContext="{DynamicResource vm}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExpensesPage">
    <Page.Resources>
        <mvvm:ExpensesPageMvvm x:Key="vm"/>
        <Style x:Key="Button" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0 10 0 10"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="30 10 30 10">
            <TextBlock Text="Расходы" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Arial Black" FontSize="16"/>
            <ListView Height="300" Margin="0 20 0 0" ItemsSource="{Binding Expenses}" SelectedItem="{Binding SelectedExpenses}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Cost}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10 30 10 30">
            <Button Content="Добавить" Style="{DynamicResource Button}" Command="{Binding AddExpenses}"/>
            <Button Content="Редактировать" Style="{DynamicResource Button}" Command="{Binding UpdateExpenses}"/>
            <Button Content="Удалить" Style="{DynamicResource Button}" Command="{Binding RemoveExpenses}"/>
        </StackPanel>

    </Grid>
</Page>
