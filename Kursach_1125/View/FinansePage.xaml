<Page x:Class="Kursach_1125.View.FinansePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach_1125.View"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      xmlns:vms="clr-namespace:Kursach_1125.VM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinansePage">
    <Page.DataContext>
        <vms:FinansePageMvvm/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="20 30 20 0">
            <TextBlock Text="Соотошение доходов и расходов за этот месяц" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" TextWrapping="Wrap"/>
            <lvc:PieChart
        Series="{Binding Series1}"
        Title="{Binding Title}"
                Height="350">
            </lvc:PieChart>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20 30 20 0">
            <TextBlock Text="Соотношение доходов прошлых месяцев" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Arial Black" FontSize="14" TextWrapping="Wrap"/>
            <lvc:CartesianChart Series="{Binding Series}" YAxes="{Binding YAxes}" Height="350"/>
        </StackPanel>
    </Grid>
</Page>
