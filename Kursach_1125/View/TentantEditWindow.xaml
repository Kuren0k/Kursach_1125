<Window x:Class="Kursach_1125.View.TentantEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mvvm="clr-namespace:Kursach_1125.VM"
        xmlns:local="clr-namespace:Kursach_1125.View"
        mc:Ignorable="d"
        DataContext="{DynamicResource vm}"
        Title="TentantEditWindow" Height="450" Width="400">
    <Window.Resources>
        <mvvm:TentantEditWindowMvvm x:Key="vm"/>
        <Style x:Key="Box" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0 0 0 30"/>
        </Style>
        <Style x:Key="text" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 0 35"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="0,10,0,0">
            <TextBlock Text="Название" Style="{DynamicResource text}"/>
            <TextBlock Text="Контактное лицо" Style="{DynamicResource text}"/>
            <TextBlock Text="Номер телефона" Style="{DynamicResource text}"/>
            <TextBlock Text="Email" Style="{DynamicResource text}"/>
            <TextBlock Text="Дата начала аренды" Style="{DynamicResource text}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20,10,20,0" DataContext="{Binding NewTentant}">
            <TextBox Style="{DynamicResource Box}" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Style="{DynamicResource Box}" Text="{Binding ContactPerson, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Style="{DynamicResource Box}" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Style="{DynamicResource Box}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            <DatePicker Height="25" Margin="0 7 0 0" SelectedDate="{Binding RentalStartDate, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Button Content="Сохранить изменения" Command="{Binding InsertTentant}" Grid.ColumnSpan="2" Height="40" Width="200" VerticalAlignment="Bottom" Margin="0 0 0 40" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>